<view class="container">
    <view><label style="font-size: 17pt;">企业注册</label></view>
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="section common_style" style="margin-top: 50rpx">
            <input name="input" placeholder="企业名称" />
        </view>
        <view class="section common_style">
            <view class="flex-wrp" style="flex-direction: row">
                <view class="flex-item-quarter">行业</view>
                <view class="flex-item-quarter">规模</view>
                <view class="flex-item-quarter">报价</view>
            </view>
            <picker
                    mode="multiSelector"
                    bindchange="bindMultiPickerChange"
                    value="{{multiIndex}}"
                    range="{{multiArray}}"
            >
                <view class="flex-wrp" style="flex-direction: row">
                    <view class="flex-item-quarter">{{multiArray[0][multiIndex[0]]}}</view>
                    <view class="flex-item-quarter">{{multiArray[1][multiIndex[1]]}}</view>
                    <view class="flex-item-quarter">{{multiArray[2][multiIndex[2]]}}</view>
                    <view class="flex-item-quarter">{{multiArray[3][multiIndex[3]]}}</view>
                </view>
            </picker>
        </view>
        <view class="flex-wrp" style="flex-direction: row">
            <view class="flex-item-left"><input name="input" placeholder="电话" /></view>
            <view class="flex-item-right"><input name="input" placeholder="微信号" /></view>
        </view>
        <view class="page-section common_style">
            <textarea style="height: 200rpx" placeholder="企业描述"/>
        </view>
        <view class="btn-area">
            <button formType="submit">注册</button>
        </view>
    </form>
    <view>
        <navigator url="../login/login?title=login" open-type="navigate">
            <label style="font-size: 13pt;text-decoration: underline">已有账号, 进行登录</label>
        </navigator>
    </view>
    <view>
        <label style="font-size: 11pt;">注册即视为同意《用户使用协议》</label>
    </view>
</view>
